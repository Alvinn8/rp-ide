{
    "compilerOptions": {
        "target": "ES2017",
        "module": "CommonJS",
        "moduleResolution": "node",

        "outDir": "dist",
        "rootDir": "src",
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitAny": true,
        "sourceMap": true
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules"
    ]
}